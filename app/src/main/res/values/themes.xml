    <style name="Theme.SportsMania.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SportsMania.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SportsMania.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>